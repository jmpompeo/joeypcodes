{
  "name": "joeypcodes",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "simple-git-hooks",
    "a11y": "npm run build && sh -c \"npm run preview -- --host 127.0.0.1 --port 4173 --silent & PREVIEW_PID=$!; npx wait-on http://127.0.0.1:4173 && pa11y-ci --config .pa11yci.json; EXIT=$?; kill $PREVIEW_PID >/dev/null 2>&1 || true; exit $EXIT\"",
    "a11y:ci": "sh -c \"npm run preview -- --host 127.0.0.1 --port 4173 --silent & PREVIEW_PID=$!; npx wait-on http://127.0.0.1:4173 && pa11y-ci --config .pa11yci.json; EXIT=$?; kill $PREVIEW_PID >/dev/null 2>&1 || true; exit $EXIT\""
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "astro": "^4.6.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "lint-staged": "^15.2.2",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.3.3",
    "wait-on": "^7.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{astro,ts,tsx,js,jsx,css,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
