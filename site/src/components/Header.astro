---
import ThemeToggle from './ThemeToggle.astro';
import CTAButton from './CTAButton.astro';

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Projects', href: '/projects' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="backdrop-blur supports-[backdrop-filter]:backdrop-blur" style="background-color: var(--color-surface); border-bottom: 1px solid var(--color-border);">
  <div class="mx-auto flex w-full max-w-5xl items-center justify-between px-6 py-4 text-[var(--color-text)]">
    <a class="text-lg font-semibold tracking-wide" href="/" aria-label="Joey P Codes home" style="color: var(--color-text);">
      Joey P Codes
    </a>
    <nav aria-label="Primary" class="hidden items-center gap-6 text-sm font-medium md:flex">
      {navLinks.map(({ label, href }) => {
        const isActive = currentPath === href;
        return (
          <a
            class:list={[
              'transition-colors duration-150',
              isActive
                ? 'text-[var(--color-accent)]'
                : 'text-[var(--color-text-muted)] hover:text-[var(--color-accent)] focus-visible:text-[var(--color-accent)]',
            ]}
            href={href}
          >
            {label}
          </a>
        );
      })}
    </nav>
    <div class="flex items-center gap-3">
      <CTAButton href="/contact" size="sm">
        Hire Me
      </CTAButton>
      <ThemeToggle />
    </div>
  </div>
</header>
