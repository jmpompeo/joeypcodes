---
import GitHubIcon from './icons/GitHubIcon.astro';
import LinkedInIcon from './icons/LinkedInIcon.astro';

const year = new Date().getFullYear();

const iconMap = {
  github: GitHubIcon,
  linkedin: LinkedInIcon,
} as const;

type IconKey = keyof typeof iconMap;

const socials: Array<{ label: string; href: string; icon: IconKey }> = [
  {
    label: 'GitHub',
    href: 'https://github.com/joeypcodes',
    icon: 'github',
  },
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/joeypompeo/',
    icon: 'linkedin',
  },
];
---

<footer class="border-t border-white/10 bg-surface-dark/80 py-10 text-sm text-text-light/70">
  <div class="mx-auto flex w-full max-w-5xl flex-col gap-6 px-6 md:flex-row md:items-center md:justify-between">
    <p>Â© {year} Joey Pompeo. All rights reserved.</p>
    <nav aria-label="Social links">
      <ul class="flex items-center gap-4">
        {socials.map((item) => {
          const Icon = iconMap[item.icon];
          return (
            <li>
              <a
                class="flex items-center gap-2 rounded-full border border-white/10 px-4 py-2 transition hover:border-primary hover:text-primary focus-visible:border-primary focus-visible:text-primary"
                href={item.href}
                target="_blank"
                rel="noreferrer"
                aria-label={item.label}
              >
                <Icon class="h-5 w-5" />
                <span class="text-sm">{item.label}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </nav>
  </div>
</footer>
