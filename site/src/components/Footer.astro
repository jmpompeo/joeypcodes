---
import GitHubIcon from './icons/GitHubIcon.astro';
import LinkedInIcon from './icons/LinkedInIcon.astro';

const year = new Date().getFullYear();

const iconMap = {
  github: GitHubIcon,
  linkedin: LinkedInIcon,
} as const;

type IconKey = keyof typeof iconMap;

const socials: Array<{ label: string; href: string; icon: IconKey }> = [
  {
    label: 'GitHub',
    href: 'https://github.com/jmpompeo',
    icon: 'github',
  },
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/joseph-pompeo/',
    icon: 'linkedin',
  },
];
---

<footer class="py-10 text-sm" style="background-color: var(--color-surface); border-top: 1px solid var(--color-border); color: var(--color-text-muted);">
  <div class="mx-auto flex w-full max-w-5xl flex-col gap-6 px-6 md:flex-row md:items-center md:justify-between">
    <p style="color: var(--color-text-muted);">Â© {year} Joey Pompeo. All rights reserved.</p>
    <nav aria-label="Social links">
      <ul class="flex items-center gap-4">
        {socials.map((item) => {
          const Icon = iconMap[item.icon];
          return (
            <li>
              <a
                class="flex items-center gap-2 rounded-full border px-4 py-2 text-sm transition-colors duration-150 border-[var(--color-border)] text-[var(--color-text)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] focus-visible:border-[var(--color-accent)] focus-visible:text-[var(--color-accent)]"
                href={item.href}
                target="_blank"
                rel="noreferrer"
                aria-label={item.label}
              >
                <Icon class="h-5 w-5" />
                <span class="text-sm">{item.label}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </nav>
  </div>
</footer>
