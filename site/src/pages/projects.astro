---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects as projectData } from '../data/projects';

const projects = [...projectData].sort((a, b) => a.order - b.order);
---

<BaseLayout title="Project case studies" description="A snapshot of the Azure and .NET projects I’ve delivered — from automation toolkits to real-time observability dashboards.">
  <section class="space-y-8">
    <div class="space-y-3">
      <p class="text-xs uppercase tracking-[0.3em] text-[var(--color-accent)]">Case studies</p>
      <h1 class="text-4xl font-bold text-[var(--color-text)] md:text-5xl">Highlighted projects</h1>
      <p class="max-w-prose text-[var(--color-text-muted)]">
        Each project blends automation, testing, and observability so teams ship faster and safer.
      </p>
    </div>
    <div class="grid gap-6 md:grid-cols-2">
      {projects.map((project) => (
        <ProjectCard project={project} />
      ))}
    </div>
  </section>
</BaseLayout>
