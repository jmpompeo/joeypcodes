---
import BaseLayout from './BaseLayout.astro';
import CTAButton from '../components/CTAButton.astro';

const { Content, data } = Astro.props as {
  Content: any;
  data: {
    title: string;
    summary: string;
    role: string;
    tech: string[];
    tags: string[];
    outcomes: string[];
    github?: string;
  };
};
---

<BaseLayout title={data.title} description={data.summary}>
  <article class="space-y-10">
    <section class="grid gap-8 md:grid-cols-[2fr,1fr]">
      <div class="space-y-4">
        <div class="flex flex-wrap gap-2 text-xs uppercase tracking-[0.3em] text-primary">
          {data.tags.map((tag) => (
            <span class="rounded-full border border-white/10 px-3 py-1">{tag}</span>
          ))}
        </div>
        <p class="text-text-light/80">{data.summary}</p>
      </div>
      <aside class="space-y-4 rounded-2xl border border-white/10 bg-surface-dark/70 p-5">
        <dl class="space-y-2 text-sm text-text-light/80">
          <div>
            <dt class="font-semibold text-white">Role</dt>
            <dd>{data.role}</dd>
          </div>
          <div>
            <dt class="font-semibold text-white">Tech</dt>
            <dd class="flex flex-wrap gap-2">
              {data.tech.map((item) => (
                <span class="rounded-full border border-white/10 px-2 py-1 text-xs uppercase tracking-wide">
                  {item}
                </span>
              ))}
            </dd>
          </div>
        </dl>
        {data.github ? (
          <CTAButton href={data.github} target="_blank" rel="noreferrer" variant="secondary">
            View on GitHub
          </CTAButton>
        ) : (
          <p class="text-xs text-text-light/60">GitHub link coming soon.</p>
        )}
      </aside>
    </section>

    {data.outcomes.length > 0 && (
      <section class="space-y-3">
        <h2 class="text-2xl font-semibold text-white">Outcomes</h2>
        <ul class="list-disc space-y-2 pl-6 text-text-light/80">
          {data.outcomes.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </section>
    )}

    <section class="prose prose-invert max-w-none">
      <Content />
    </section>
  </article>
</BaseLayout>
