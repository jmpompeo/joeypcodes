---
import BaseLayout from './BaseLayout.astro';

const {
  title,
  description,
  eyebrow,
} = Astro.props as {
  title: string;
  description?: string;
  eyebrow?: string;
};
---

<BaseLayout title={title} description={description}>
  <section class="space-y-6">
    {eyebrow && <p class="text-xs uppercase tracking-[0.3em] text-primary">{eyebrow}</p>}
    <div class="space-y-4">
      <h1 class="text-4xl font-bold text-white md:text-5xl">{title}</h1>
      {description && <p class="max-w-prose text-lg text-text-light/80">{description}</p>}
    </div>
    <slot />
  </section>
</BaseLayout>
