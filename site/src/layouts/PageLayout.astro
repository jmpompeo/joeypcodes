---
import BaseLayout from './BaseLayout.astro';

const {
  title,
  description,
  eyebrow,
} = Astro.props as {
  title: string;
  description?: string;
  eyebrow?: string;
};
---

<BaseLayout title={title} description={description}>
  <section class="space-y-6">
    {eyebrow && (
      <p class="text-xs uppercase tracking-[0.3em] text-[var(--color-accent)]">{eyebrow}</p>
    )}
    <div class="space-y-4">
      <h1 class="text-4xl font-bold text-[var(--color-text)] md:text-5xl">{title}</h1>
      {description && <p class="max-w-prose text-lg text-[var(--color-text-muted)]">{description}</p>}
    </div>
    <slot />
  </section>
</BaseLayout>
