---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Joey P Codes',
  description = 'Azure-focused .NET engineer building reliable automation.',
  pageClass = '',
} = Astro.props;
---

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <slot name="head" />
  </head>
<body class:list={[pageClass, 'min-h-screen bg-[var(--color-bg)] text-[color:var(--color-text)] transition-colors duration-200']}>
    <a
      href="#main-content"
      class="skip-link absolute left-[-999px] top-4 z-50 rounded-full border px-4 py-2 text-sm font-semibold transition duration-150 focus:left-4 focus:outline focus:outline-2 focus:outline-offset-2"
      style="background-color: var(--color-accent); color: var(--color-text-on-accent); border-color: var(--color-border); outline-color: var(--color-focus);"
    >
      Skip to main content
    </a>
    <div class="flex min-h-screen flex-col">
      <Header />
      <main id="main-content" class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
    <slot name="afterBody" />
  </body>
</html>
